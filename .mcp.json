{
  "mcpServers": {
    "browser-tools": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "bunx @agentdeskai/browser-tools-mcp"
      ]
    },
    "convex": {
      "command": "npx",
      "args": [
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "bunx -y @upstash/context7-mcp"
      ]
    }
  }
}