# .env.example

# Clerk Authentication
# Note: In SvelteKit, client-side env vars must be prefixed with PUBLIC_
VITE_CONVEX_URL="https://<your-project-name>.convex.cloud"
PUBLIC_CLERK_PUBLISHABLE_KEY="your_publishable_key_here"
CLERK_SECRET_KEY="your_secret_key_here"

# Convex deployment
CONVEX_DEPLOYMENT="<your-project-name>"

# JWT Issuer Domain for Convex integration
# This should match your Clerk domain (e.g., https://clerk.your-app.com)
CLERK_JWT_ISSUER_DOMAIN="https://clerk.habistat.app"
