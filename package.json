{
  "name": "habistat",
  "version": "0.0.4",
  "description": "Habistat Habit Tracker",
  "author": "Ilya Aizenberg",
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3001",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome check .",
    "format": "bun run format:biome && bun run format:prettier",
    "format:biome": "biome format --write .",
    "format:prettier": "prettier --write \"**/*.svelte\"",
    "format:check": "biome check --write . && prettier --check \"**/*.svelte\"",
    "tauri": "tauri",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node scripts/migrate.mjs",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "node scripts/reset-db.mjs",
    "db:setup": "bun run db:generate && bun run db:migrate",
    "generate:sample-data": "node scripts/generate-sample-data.mjs",
    "bump": "node scripts/version-bumper.mjs",
    "bump:patch": "bun run bump patch",
    "bump:minor": "bun run bump minor",
    "bump:major": "bun run bump major",
    "tree": "wsl bash -c \"tree -a -I 'node_modules|.next|src-tauri/target|.git|.vercel|dist|out|gen|target|.svelte-kit|.obsidian|dist-clean|ui|build|icons' --noreport --dirsfirst > file-structure.txt\""
  },
